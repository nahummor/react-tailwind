{
    "name": "react-tailwindcss",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@hookform/resolvers": "0.0.6",
        "@testing-library/jest-dom": "^4.2.4",
        "@testing-library/react": "^9.5.0",
        "@testing-library/user-event": "^7.2.1",
        "body-parser": "^1.19.0",
        "express": "^4.17.1",
        "moment": "^2.27.0",
        "mongodb": "^3.5.9",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-hook-form": "^6.0.6",
        "react-router-dom": "^5.2.0",
        "react-scripts": "3.4.1",
        "react-table": "^7.3.0",
        "yup": "^0.29.1"
    },
    "scripts": {
        "start": "react-scripts start && npm run watch:css",
        "build": "set NODE_ENV=production && react-scripts build && npm run build:css",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "build:css": "postcss src/styles/tailwind.css -o src/styles/app.css",
        "watch:css": "postcss src/styles/tailwind.css -o src/styles/app.css -w",
        "start:server": "nodemon ./backend/server.js"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "devDependencies": {
        "autoprefixer": "^9.8.0",
        "postcss-cli": "^7.1.1",
        "tailwindcss": "^1.4.6"
    }
}
